{
	"scripts": {
		"build:blocks": "wp-scripts build --webpack-src-dir='./blocks' --output-path='./blocks-built' --webpack-copy-php",
		"build:css": "npx postcss --use postcss-import-ext-glob postcss-import postcss-nested -o ./style.css ./assets/css/main.css",
		"watch:blocks": "wp-scripts start --webpack-src-dir='./blocks' --output-path='./blocks-built' --webpack-copy-php",
		"watch:css": "npm run build:css -- --watch"
	},
	"devDependencies": {
		"@wordpress/prettier-config": "^2.16.0",
		"@wordpress/scripts": "^26.4.0",
		"postcss-cli": "^10.1.0",
		"postcss-import": "^15.1.0",
		"postcss-import-ext-glob": "^2.1.1",
		"postcss-nested": "^6.0.1"
	},
	"prettier": "@wordpress/prettier-config"
}
